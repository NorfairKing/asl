  build-depends:
      base                          >= 4.7    && < 5
    , shake                         >= 0.15   && < 0.16
    , aeson
    , aeson-pretty
    , bytestring                    >= 0.10   && < 0.11
    , cassava                       >= 0.4    && < 0.5
    , containers                    >= 0.5    && < 0.6
    , directory                     >= 1.2    && < 1.3
    , filepath                      >= 1.4    && < 1.5
    , hashable                      >= 1.2    && < 1.3
    , mtl
    , network
    , optparse-applicative          >= 0.13   && < 0.14
    , parsec                        >= 3.1    && < 3.2
    , pipes                         >= 4.1    && < 4.2
    , pipes-bytestring              >= 2.1    && < 2.2
    , pipes-csv                     >= 1.4    && < 1.5
    , process                       >= 1.4    && < 1.5
    , split                         >= 0.2    && < 0.3
    , statistics                    >= 0.13   && < 0.14
    , text                          >= 1.2    && < 1.3
    , threads                       >= 0.5    && < 0.6
    , unordered-containers          >= 0.2    && < 0.3
    , vector                        >= 0.11   && < 0.12
  default-language:    Haskell2010

executable orc
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base
    , orchestra
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/NorfairKing/asl
