<?xml version="1.0" encoding="UTF-8"?>
<project name="module_asl_test" default="compile.module.asl_test">
  <dirname property="module.asl_test.basedir" file="${ant.file.module_asl_test}"/>
  
  <property name="module.jdk.home.asl_test" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.asl_test" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.asl_test" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.asl_test" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="asl_test.output.dir" value="undefined"/>
  <property name="asl_test.testoutput.dir" value="${module.asl_test.basedir}/../../build/classes/test"/>
  
  <path id="asl_test.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="asl_test.module.production.classpath">
    <path refid="${module.jdk.classpath.asl_test}"/>
    <pathelement location="${asl_main.output.dir}"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="asl_test.runtime.production.module.classpath">
    <path refid="asl_main.runtime.production.module.classpath"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="asl_test.module.classpath">
    <path refid="${module.jdk.classpath.asl_test}"/>
    <pathelement location="${asl_main.output.dir}"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  <path id="asl_test.runtime.module.classpath">
    <pathelement location="${asl_test.testoutput.dir}"/>
    <path refid="asl_main.runtime.module.classpath"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.asl_test">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.asl_test">
    <patternset refid="excluded.from.module.asl_test"/>
  </patternset>
  
  
  <target name="compile.module.asl_test" depends="compile.module.asl_test.production,compile.module.asl_test.tests" description="Compile module asl_test"/>
  
  <target name="compile.module.asl_test.production" depends="register.custom.compilers,compile.module.asl_main" description="Compile module asl_test; production classes"/>
  
  <target name="compile.module.asl_test.tests" depends="register.custom.compilers,compile.module.asl_test.production" description="compile module asl_test; test classes" unless="skip.tests"/>
  
  <target name="clean.module.asl_test" description="cleanup module">
    <delete dir="${asl_test.output.dir}"/>
    <delete dir="${asl_test.testoutput.dir}"/>
  </target>
</project>